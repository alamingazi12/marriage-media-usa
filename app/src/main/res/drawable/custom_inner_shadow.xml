<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFF7" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  Right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient

                android:angle="180"
                android:centerX="0.05"
                android:centerColor="#00EDE7E7"
                android:endColor="#00F6EAEA"
                android:startColor="#6BD3CFCF"
                />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerX="0.05"
                android:centerColor="#00EDE7E7"
                android:endColor="#00F6EAEA"
                android:startColor="#6BD3CFCF"
                />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"

                android:centerY="0.05"
                android:centerColor="#00EDE7E7"
                android:endColor="#00F6EAEA"
                android:startColor="#6BD3CFCF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!--  Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerY="0.05"
                android:centerColor="#00CFC6C6"
                android:endColor="#00F6EAEA"
                android:startColor="#6BE3DFDF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>