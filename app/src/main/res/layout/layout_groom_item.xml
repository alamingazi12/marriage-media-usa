<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="9dp"
    android:elevation="7dp"
    android:background="@drawable/layout_style_white"
    android:layout_marginBottom="7dp"
    android:layout_marginRight="25dp"
    android:layout_height="183dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/girl_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:text="Nuruzzaman Khan"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/circleImageView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView201"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="25 years 5 month,5ft 2in/160cm"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView200"
            app:layout_constraintTop_toBottomOf="@+id/textView200" />

        <TextView
            android:id="@+id/textView202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mohakhali,dhaka"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/textView201"
            app:layout_constraintTop_toBottomOf="@+id/textView201" />

        <TextView
            android:id="@+id/textView203"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="MBBS"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/textView202"
            app:layout_constraintTop_toBottomOf="@+id/textView202" />

        <TextView
            android:id="@+id/textView204"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Self-emplyed"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/textView203"
            app:layout_constraintTop_toBottomOf="@+id/textView203" />

        <View
            android:id="@+id/textView205"
            android:layout_width="8dp"

            android:layout_height="8dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/online_status_style"

            app:layout_constraintStart_toStartOf="@+id/textView204"
            app:layout_constraintTop_toBottomOf="@+id/textView204" />

        <TextView
            android:id="@+id/textView206"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="active now"
            android:gravity="center"
            android:textColor="#07ECBE"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView205"
            app:layout_constraintStart_toEndOf="@+id/textView205"
            app:layout_constraintTop_toTopOf="@+id/textView205" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button23"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/btn_bg"
            android:text="Send invitation"
            android:visibility="gone"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:cornerRadius="4dp"
            app:layout_constraintStart_toStartOf="@+id/textView205"
            app:layout_constraintTop_toBottomOf="@+id/textView206" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button24"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="14dp"
            android:backgroundTint="@color/btn_bg"
            android:text="Chat"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="11dp"
            app:cornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView206"
            app:layout_constraintStart_toEndOf="@+id/textView206"
            app:layout_constraintTop_toTopOf="@+id/textView206" />

        <ImageView
            android:id="@+id/imageView53"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_love_sign" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>