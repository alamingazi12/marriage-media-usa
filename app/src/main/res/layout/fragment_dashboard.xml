<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment">

  <EditText
      android:layout_marginBottom="20dp"
      android:id="@+id/editTextTextPersonName23"
      android:layout_width="0dp"
      android:layout_height="40dp"

      android:layout_marginLeft="15dp"
      android:layout_marginTop="30dp"
      android:layout_marginRight="10dp"

      android:background="@drawable/card_style_radious"
      android:drawablePadding="7dp"

      android:elevation="4dp"
      android:ellipsize="start"
      android:ems="10"
      android:hint="Search Marriage Office"
      android:inputType="textPersonName"
      android:paddingLeft="7dp"
      android:shadowColor="@color/black"
      android:textSize="13dp"
      app:layout_constraintEnd_toStartOf="@+id/button20"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_goneMarginTop="30dp" />

  <Button
      android:id="@+id/button20"
      style="@style/button_style_google"
      android:layout_width="0dp"


      android:layout_height="50dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="15dp"
      android:drawableLeft="@drawable/search"
      android:drawablePadding="2dp"

      android:elevation="4dp"
      android:fontFamily="@font/roboto_regular"
      android:text="Find"
      android:textAllCaps="false"
      android:textSize="13dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName23"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName23"
      app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName23" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/patro_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName23"
      app:layout_constraintVertical_bias="1.0">

  </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>